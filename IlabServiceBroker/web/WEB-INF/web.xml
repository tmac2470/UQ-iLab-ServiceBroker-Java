<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>LogFilesPath</param-name>
        <param-value>/logs/iLabServiceBroker.log</param-value>
    </context-param>
    <context-param>
        <param-name>LogLevel</param-name>
        <param-value>INFO</param-value>
    </context-param>
    <context-param>
        <param-name>XmlConfigPropertiesPath</param-name>
        <param-value>/WEB-INF/ConfigProperties.xml</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ServiceBrokerServlet</servlet-name>
        <servlet-class>uq.ilabs.servicebroker.IlabServiceBrokerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>uq.ilabs.servicebroker.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewExpiredServlet</servlet-name>
        <servlet-class>uq.ilabs.servicebroker.ViewExpiredServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyLabsServlet</servlet-name>
        <servlet-class>uq.ilabs.servicebroker.MyLabsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServiceBrokerServlet</servlet-name>
        <url-pattern>/IlabServiceBroker.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/faces/Logout.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewExpiredServlet</servlet-name>
        <url-pattern>/faces/ViewExpired.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyLabsServlet</servlet-name>
        <url-pattern>/faces/MyClients.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/faces/ViewExpired.xhtml</location>
    </error-page>
</web-app>
